@page
@model WEB_SIS_2.Pages.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h1 class="text-white">Login</h1>

<form method="post">
    Login: <input type="text" maxlength="25" name="login" /><br />
    Password: <input type="password" id="password-input" maxlength="25" placeholder="enter password" name="password" /><br />
    <input type="submit" value="Login" />
</form>

@if (Model.User != null)
    @Model.User.Login
<br />
@if (Model.User != null)
    @Model.User.Password

<div>
    <a asp-page="Index">Go to Home Page</a>
</div>
